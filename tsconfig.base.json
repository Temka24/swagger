{
    "compilerOptions": {
        "target": "ES2020",
        "module": "ESNext",
        "moduleResolution": "Bundler",
        "moduleDetection": "force",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "resolveJsonModule": true,
        "rootDir": "./src",
        "types": ["node"],
        "typeRoots": ["./node_modules/@types"]
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules"]
}
